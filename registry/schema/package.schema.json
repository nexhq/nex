{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/devkiraa/nex/registry/schema/package.schema.json",
  "title": "Nex Package Manifest",
  "description": "Schema for nex package manifest files",
  "type": "object",
  "required": ["id", "name", "version", "description", "repository", "runtime", "entrypoint"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*\\.[a-z0-9][a-z0-9-]*$",
      "description": "Unique package identifier in author.package-name format (lowercase, hyphens allowed)",
      "examples": ["john.image-converter", "acme.data-utils"]
    },
    "name": {
      "type": "string",
      "maxLength": 100,
      "description": "Human-readable display name for the package",
      "examples": ["Image Converter", "Data Utilities"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?(\\+[a-zA-Z0-9.]+)?$",
      "description": "Semantic version (semver) of the package",
      "examples": ["1.0.0", "2.1.0-beta.1", "1.0.0+build.123"]
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Short description of what the package does"
    },
    "author": {
      "oneOf": [
        {
          "type": "string",
          "description": "Author name as a simple string"
        },
        {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Author's display name"
            },
            "github": {
              "type": "string",
              "description": "Author's GitHub username"
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "Author's email address"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Author's website URL"
            }
          }
        }
      ],
      "description": "Package author information"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier",
      "examples": ["MIT", "Apache-2.0", "GPL-3.0"]
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "URL to the package's homepage or documentation"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://github\\.com/[a-zA-Z0-9_.-]+/[a-zA-Z0-9_.-]+$",
      "description": "GitHub repository URL where the package source code is hosted"
    },
    "runtime": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["python", "node", "bash", "powershell", "binary", "go"],
          "description": "The runtime environment required to execute the package"
        },
        "version": {
          "type": "string",
          "description": "Required runtime version (e.g., '>=3.8' for Python)",
          "examples": [">=3.8", ">=18.0.0", ">=1.20"]
        }
      }
    },
    "entrypoint": {
      "type": "string",
      "description": "Main file to execute (relative to package root)",
      "examples": ["main.py", "index.js", "cli.py"]
    },
    "commands": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Named commands that can be executed",
      "examples": [
        {
          "default": "python main.py",
          "install": "pip install -r requirements.txt",
          "help": "python main.py --help"
        }
      ]
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "system": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required system tools (e.g., 'git', 'ffmpeg')"
        },
        "python": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Python package dependencies with version specifiers"
        },
        "node": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Node.js package dependencies"
        }
      },
      "description": "Package dependencies by type"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "maxItems": 20,
      "description": "Keywords for search discovery"
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["windows", "linux", "macos"]
      },
      "description": "Supported operating systems (defaults to all if not specified)"
    },
    "architectures": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["x64", "x86", "arm64", "arm"]
      },
      "description": "Supported CPU architectures"
    },
    "files": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Files/directories to include when installing (glob patterns supported)"
    },
    "scripts": {
      "type": "object",
      "properties": {
        "preinstall": { "type": "string" },
        "postinstall": { "type": "string" },
        "preuninstall": { "type": "string" },
        "postuninstall": { "type": "string" }
      },
      "description": "Lifecycle scripts"
    }
  },
  "additionalProperties": false
}
