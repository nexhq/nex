{
  "$schema": "https://raw.githubusercontent.com/nexhq/nex/main/registry/schema/nex-package.schema.json",
  "id": "pagepull",
  "name": "PagePull",
  "version": "0.0.1",
  "description": "Pull entire websites for offline viewing",
  "type": "python",
  "python": {
    "version": ">=3.8",
    "entry": "pagepull.py",
    "requirements": "requirements.txt"
  },
  "install": {
    "steps": [
      {
        "action": "download",
        "url": "https://github.com/nexhq/pagepull/releases/download/v${version}/pagepull.py",
        "dest": "pagepull.py"
      },
      {
        "action": "download",
        "url": "https://github.com/nexhq/pagepull/releases/download/v${version}/requirements.txt",
        "dest": "requirements.txt"
      },
      {
        "action": "pip_install",
        "requirements": "requirements.txt"
      }
    ]
  },
  "run": {
    "command": "python",
    "args": ["pagepull.py"],
    "passthrough_args": true
  },
  "commands": {
    "download": {
      "description": "Download a website for offline viewing",
      "args": ["-u", "${url}"],
      "example": "nex run pagepull download --url https://example.com"
    },
    "serve": {
      "description": "Download and start local preview server",
      "args": ["-u", "${url}", "--serve"],
      "example": "nex run pagepull serve --url https://example.com"
    },
    "stealth": {
      "description": "Download in stealth mode (slower, safer)",
      "args": ["-u", "${url}", "--stealth"],
      "example": "nex run pagepull stealth --url https://example.com"
    }
  },
  "examples": [
    {
      "description": "Download a website",
      "command": "nex run pagepull -u https://example.com"
    },
    {
      "description": "Download with preview server",
      "command": "nex run pagepull -u https://react.dev --serve"
    },
    {
      "description": "Stealth mode download",
      "command": "nex run pagepull -u https://example.com --stealth"
    }
  ],
  "author": {
    "name": "devkiraa",
    "github": "devkiraa"
  },
  "license": "MIT",
  "repository": "https://github.com/nexhq/pagepull",
  "keywords": ["website", "downloader", "offline", "scraper", "backup"]
}
