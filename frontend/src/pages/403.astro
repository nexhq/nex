---
import ErrorLayout from '../layouts/ErrorLayout.astro';

const baseUrl = import.meta.env.BASE_URL;
---

<ErrorLayout title="403 - Access Denied" description="You don't have permission to access this resource">
  <div class="error-page">
    <div class="error-bg">
      <div class="error-grid"></div>
    </div>
    <div class="container">
      <div class="error-content">
        <div class="error-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
          </svg>
        </div>
        <h1 class="error-code">403</h1>
        <h2 class="error-title">Access Denied</h2>
        <p class="error-message">
          Sorry, you don't have permission to access this resource. 
          If you believe this is an error, please contact the administrator.
        </p>
        <div class="error-actions">
          <a href={baseUrl} class="btn btn-primary">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
            Back to Home
          </a>
          <a href="https://github.com/devkiraa/nex/issues" class="btn btn-secondary">
            Report Issue
          </a>
        </div>
        <div class="error-info">
          <div class="info-card">
            <div class="info-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="12"/>
                <line x1="12" y1="16" x2="12.01" y2="16"/>
              </svg>
            </div>
            <div class="info-text">
              <h3>Why am I seeing this?</h3>
              <p>The resource you're trying to access is protected or restricted. This could be due to:</p>
              <ul>
                <li>Insufficient permissions</li>
                <li>Expired or invalid credentials</li>
                <li>IP-based access restrictions</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</ErrorLayout>

<style>
  .error-page {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(180deg, #f7f7f7 0%, #ffffff 100%);
    overflow: hidden;
  }
  
  .error-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .error-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(239, 68, 68, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(239, 68, 68, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
  }
  
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
  }
  
  .error-content {
    text-align: center;
  }
  
  .error-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    color: #ef4444;
    opacity: 0.8;
  }
  
  .error-icon svg {
    width: 100%;
    height: 100%;
  }
  
  .error-code {
    font-size: 7rem;
    font-weight: 800;
    color: #ef4444;
    line-height: 1;
    margin: 0;
    text-shadow: 0 4px 20px rgba(239, 68, 68, 0.2);
  }
  
  .error-title {
    font-size: 2rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0.5rem 0 1rem;
  }
  
  .error-message {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.7;
    margin-bottom: 2rem;
  }
  
  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.85rem 1.75rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
    border: none;
  }
  
  .btn-primary {
    background: #ef4444;
    color: white;
  }
  
  .btn-primary:hover {
    background: #dc2626;
    transform: translateY(-2px);
    text-decoration: none;
    color: white;
  }
  
  .btn-secondary {
    background: white;
    color: #333;
    border: 2px solid #e0e0e0;
  }
  
  .btn-secondary:hover {
    border-color: #ef4444;
    color: #ef4444;
    text-decoration: none;
  }
  
  .error-info {
    text-align: left;
  }
  
  .info-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid #e5e5e5;
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }
  
  .info-icon {
    color: #ef4444;
    flex-shrink: 0;
  }
  
  .info-text h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    margin: 0 0 0.5rem;
  }
  
  .info-text p {
    font-size: 0.9rem;
    color: #666;
    margin: 0 0 0.75rem;
    line-height: 1.6;
  }
  
  .info-text ul {
    margin: 0;
    padding-left: 1.25rem;
  }
  
  .info-text li {
    font-size: 0.85rem;
    color: #666;
    margin-bottom: 0.25rem;
  }
  
  @media (max-width: 640px) {
    .error-code {
      font-size: 4.5rem;
    }
    
    .error-title {
      font-size: 1.5rem;
    }
    
    .error-actions {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
      justify-content: center;
    }
    
    .info-card {
      flex-direction: column;
    }
  }
</style>
