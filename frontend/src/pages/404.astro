---
import ErrorLayout from '../layouts/ErrorLayout.astro';

const baseUrl = import.meta.env.BASE_URL;
---

<ErrorLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <div class="error-page">
    <div class="error-bg">
      <div class="error-grid"></div>
    </div>
    <div class="container">
      <div class="error-content">
        <div class="error-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="10"/>
            <path d="M15 9l-6 6M9 9l6 6"/>
          </svg>
        </div>
        <h1 class="error-code">404</h1>
        <h2 class="error-title">Page Not Found</h2>
        <p class="error-message">
          Oops! The page you're looking for doesn't exist or has been moved. 
          Don't worry, let's get you back on track.
        </p>
        <div class="error-actions">
          <a href={baseUrl} class="btn btn-primary">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
            Back to Home
          </a>
          <a href={`${baseUrl}packages`} class="btn btn-secondary">
            Browse Packages
          </a>
        </div>
        <div class="error-suggestions">
          <p>You might want to check out:</p>
          <div class="suggestions-list">
            <a href={baseUrl}>Home</a>
            <a href={`${baseUrl}packages`}>Packages</a>
            <a href={`${baseUrl}docs`}>Documentation</a>
            <a href="https://github.com/devkiraa/nex">GitHub</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</ErrorLayout>

<style>
  .error-page {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(180deg, #f7f7f7 0%, #ffffff 100%);
    overflow: hidden;
  }
  
  .error-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .error-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(203, 56, 55, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(203, 56, 55, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
  }
  
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
  }
  
  .error-content {
    text-align: center;
  }
  
  .error-icon {
    width: 100px;
    height: 100px;
    margin: 0 auto 1.5rem;
    color: #cb3837;
    opacity: 0.8;
  }
  
  .error-icon svg {
    width: 100%;
    height: 100%;
  }
  
  .error-code {
    font-size: 8rem;
    font-weight: 800;
    color: #cb3837;
    line-height: 1;
    margin: 0;
    text-shadow: 0 4px 20px rgba(203, 56, 55, 0.2);
  }
  
  .error-title {
    font-size: 2rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0.5rem 0 1rem;
  }
  
  .error-message {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.7;
    margin-bottom: 2rem;
  }
  
  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.85rem 1.75rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
    border: none;
  }
  
  .btn-primary {
    background: #cb3837;
    color: white;
  }
  
  .btn-primary:hover {
    background: #a82f2e;
    transform: translateY(-2px);
    text-decoration: none;
    color: white;
  }
  
  .btn-secondary {
    background: white;
    color: #333;
    border: 2px solid #e0e0e0;
  }
  
  .btn-secondary:hover {
    border-color: #cb3837;
    color: #cb3837;
    text-decoration: none;
  }
  
  .error-suggestions {
    border-top: 1px solid #e5e5e5;
    padding-top: 2rem;
  }
  
  .error-suggestions p {
    font-size: 0.95rem;
    color: #888;
    margin-bottom: 1rem;
  }
  
  .suggestions-list {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .suggestions-list a {
    color: #cb3837;
    font-weight: 500;
    text-decoration: none;
  }
  
  .suggestions-list a:hover {
    text-decoration: underline;
  }
  
  @media (max-width: 640px) {
    .error-code {
      font-size: 5rem;
    }
    
    .error-title {
      font-size: 1.5rem;
    }
    
    .error-message {
      font-size: 1rem;
    }
    
    .error-icon {
      width: 70px;
      height: 70px;
    }
    
    .error-actions {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
