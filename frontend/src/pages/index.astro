import Layout from '../layouts/Layout.astro';

// Fetch packages from backend API
const registryUrl = 'http://localhost:5000/api/packages';
let packages = [];
let error = null;

try {
  const response = await fetch(registryUrl);
  if (response.ok) {
    const data = await response.json();
    packages = data.packages || [];
  } else {
    error = `API Error: ${response.status}`;
  }
} catch (e) {
  error = 'Could not connect to registry backend';
  console.error(e);
  packages = [];
}

// Fetch latest release version from GitHub
const githubReleasesApi = 'https://api.github.com/repos/nexhq/nex/releases/latest';
let releaseVersion = 'v1.8.1'; // Default to current version
let releaseDate = '';

try {
  const releaseResponse = await fetch(githubReleasesApi, {
    headers: {
      'Accept': 'application/vnd.github.v3+json',
      'User-Agent': 'nex-frontend'
    }
  });
  if (releaseResponse.ok) {
    const releaseData = await releaseResponse.json();
    releaseVersion = releaseData.tag_name || 'v1.8.0';
    releaseDate = releaseData.published_at ? new Date(releaseData.published_at).toLocaleDateString() : '';
  }
} catch (e) {
  // Use fallback version
  console.error('Failed to fetch release info:', e);
}

const baseUrl = import.meta.env.BASE_URL;
const releaseBaseUrl = `https://github.com/nexhq/nex/releases/download/${releaseVersion}`;
const releasePageUrl = `https://github.com/nexhq/nex/releases/tag/${releaseVersion}`;
const downloadLinks = {
  windows: `${releaseBaseUrl}/nex-windows-x64.exe`,
  linux: `${releaseBaseUrl}/nex-linux-x64`,
  mac: `${releaseBaseUrl}/nex-macos-x64`,
};
