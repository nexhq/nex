  .hero-search-input::placeholder {
    color: var(--nex-gray);
  }
  
  .hero-search-btn {
    padding: 1rem 2rem;
    background: var(--nex-black);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  .hero-search-btn:hover {
    background: #000;
  }

  .search-results {
    position: absolute;
