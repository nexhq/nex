  }

  .search-result-item {
    display: block;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--nex-border);
    color: var(--nex-black);
    text-decoration: none;
    transition: background 0.1s;
  }

  .search-result-item:last-child {
    border-bottom: none;
  }

  .search-result-item:hover {
    background: var(--nex-bg);
  }

  .search-result-name {
    font-weight: 600;
    display: block;
    font-size: 0.95rem;
  }
  
  .search-result-desc {
