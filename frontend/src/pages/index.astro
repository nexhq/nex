  }
  
  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-content h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .cta-content p {
    opacity: 0.8;
    margin-bottom: 2rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
  
  .cta-buttons .btn-dark {
    background: rgba(255,255,255,0.1);
    border: 1px solid rgba(255,255,255,0.2);
  }
  
  .cta-buttons .btn-dark:hover {
    background: rgba(255,255,255,0.2);
  }

