---
import Layout from '../../layouts/Layout.astro';

// Fetch packages from registry (at build time)
const registryUrl = 'https://raw.githubusercontent.com/devkiraa/nex/main/registry/index.json';
let packages = [];

try {
  if (import.meta.env.DEV) {
    packages = [
      {
        id: 'devkiraa.pagepull',
        name: 'PagePull',
        version: '1.0.0',
        description: 'Extract web pages as clean Markdown for AI/LLM consumption',
        keywords: ['web', 'scraper', 'markdown', 'ai', 'llm']
      }
    ];
  } else {
    const response = await fetch(registryUrl);
    const data = await response.json();
    packages = data.packages || [];
  }
} catch (e) {
  packages = [];
}
---

<Layout title="Search Packages | nex" description="Search and browse nex packages">
  <div class="search-hero">
    <div class="container">
      <h1>Search packages</h1>
      <div class="search-box">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input 
          type="search" 
          id="package-search" 
          placeholder="Search packages..." 
          autocomplete="off"
        />
      </div>
      <p class="result-count"><span id="count">{packages.length}</span> packages found</p>
    </div>
  </div>

  <main class="container">
    <div class="package-grid" id="package-list">
      {packages.map((pkg) => (
        <a 
          href={`${import.meta.env.BASE_URL}packages/${pkg.id}`} 
          class="package-card"
          data-name={pkg.name.toLowerCase()}
          data-id={pkg.id.toLowerCase()}
          data-description={pkg.description?.toLowerCase() || ''}
          data-keywords={pkg.keywords?.join(' ').toLowerCase() || ''}
        >
          <div class="package-header">
            <h3 class="package-name">{pkg.name}</h3>
            <span class="package-version">v{pkg.version}</span>
          </div>
          <p class="package-id">{pkg.id}</p>
          <p class="package-description">{pkg.description}</p>
          <div class="package-footer">
            <div class="keywords">
              {pkg.keywords?.slice(0, 3).map((kw) => (
                <span class="keyword">{kw}</span>
              ))}
            </div>
          </div>
          <div class="install-cmd">
            <code>nex install {pkg.id}</code>
          </div>
        </a>
      ))}
    </div>
    
    {packages.length === 0 && (
      <div class="empty-state">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
        </svg>
        <h3>No packages found</h3>
        <p>Be the first to <a href="https://github.com/devkiraa/nex">submit a package</a>!</p>
      </div>
    )}
  </main>
</Layout>

<style>
  .search-hero {
    background: linear-gradient(135deg, #cb3837 0%, #a02f2e 100%);
    color: white;
    padding: 3rem 1rem;
    text-align: center;
  }

  .search-hero h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .search-box {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    color: #666;
  }

  .search-box input {
    width: 100%;
    padding: 1rem 1rem 1rem 3rem;
    font-size: 1.1rem;
    border: none;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.2);
  }

  .search-box input:focus {
    outline: none;
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  }

  .result-count {
    margin-top: 1rem;
    opacity: 0.9;
    font-size: 0.95rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .package-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 1.5rem;
  }

  .package-card {
    background: white;
    border: 1px solid #e1e1e1;
    border-radius: 8px;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
  }

  .package-card:hover {
    border-color: #cb3837;
    box-shadow: 0 4px 12px rgba(203, 56, 55, 0.15);
    transform: translateY(-2px);
  }

  .package-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .package-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: #cb3837;
    margin: 0;
  }

  .package-version {
    background: #f0f0f0;
    color: #666;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .package-id {
    font-size: 0.9rem;
    color: #666;
    margin: 0 0 0.75rem 0;
    font-family: 'SF Mono', Monaco, 'Courier New', monospace;
  }

  .package-description {
    color: #333;
    line-height: 1.5;
    margin: 0 0 1rem 0;
    flex-grow: 1;
  }

  .package-footer {
    margin-bottom: 1rem;
  }

  .keywords {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .keyword {
    background: #f7f7f7;
    color: #666;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .install-cmd {
    background: #1a1a2e;
    padding: 0.75rem 1rem;
    border-radius: 6px;
    margin-top: auto;
  }

  .install-cmd code {
    color: #00d9ff;
    font-size: 0.9rem;
    font-family: 'SF Mono', Monaco, 'Courier New', monospace;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #666;
  }

  .empty-state svg {
    width: 80px;
    height: 80px;
    margin-bottom: 1.5rem;
    opacity: 0.5;
  }

  .empty-state h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .empty-state a {
    color: #cb3837;
    text-decoration: none;
    font-weight: 500;
  }

  .empty-state a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .search-hero h1 {
      font-size: 1.5rem;
    }

    .package-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const searchInput = document.getElementById('package-search') as HTMLInputElement;
  const packageList = document.getElementById('package-list');
  const countEl = document.getElementById('count');
  
  if (searchInput && packageList && countEl) {
    searchInput.addEventListener('input', () => {
      const query = searchInput.value.toLowerCase().trim();
      const items = packageList.querySelectorAll('.package-card');
      let visible = 0;
      
      items.forEach((item) => {
        const el = item as HTMLElement;
        const name = el.dataset.name || '';
        const id = el.dataset.id || '';
        const desc = el.dataset.description || '';
        const keywords = el.dataset.keywords || '';
        
        const matches = !query || 
          name.includes(query) || 
          id.includes(query) || 
          desc.includes(query) ||
          keywords.includes(query);
        
        el.style.display = matches ? '' : 'none';
        if (matches) visible++;
      });
      
      countEl.textContent = visible.toString();
    });
  }
</script>
