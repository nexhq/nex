---
import ErrorLayout from '../layouts/ErrorLayout.astro';

const baseUrl = import.meta.env.BASE_URL;
---

<ErrorLayout title="502 - Bad Gateway" description="Something went wrong with the server">
  <div class="error-page">
    <div class="error-bg">
      <div class="error-grid"></div>
    </div>
    <div class="container">
      <div class="error-content">
        <div class="error-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
          </svg>
        </div>
        <h1 class="error-code">502</h1>
        <h2 class="error-title">Bad Gateway</h2>
        <p class="error-message">
          We're having trouble connecting to our servers right now. 
          This is usually temporary - please try again in a few moments.
        </p>
        <div class="error-actions">
          <button onclick="window.location.reload()" class="btn btn-primary">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M23 4v6h-6M1 20v-6h6"/>
              <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"/>
            </svg>
            Try Again
          </button>
          <a href={baseUrl} class="btn btn-secondary">
            Back to Home
          </a>
        </div>
        <div class="error-info">
          <div class="info-card">
            <h3>What happened?</h3>
            <p>The server received an invalid response from an upstream server while trying to load this page.</p>
          </div>
          <div class="info-card">
            <h3>What can I do?</h3>
            <ul>
              <li>Refresh the page</li>
              <li>Wait a few minutes and try again</li>
              <li>Check our <a href="https://github.com/devkiraa/nex">GitHub</a> for status updates</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</ErrorLayout>

<style>
  .error-page {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(180deg, #f7f7f7 0%, #ffffff 100%);
    overflow: hidden;
  }
  
  .error-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .error-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(245, 158, 11, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(245, 158, 11, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
  }
  
  .container {
    max-width: 700px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
  }
  
  .error-content {
    text-align: center;
  }
  
  .error-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    color: #f59e0b;
    opacity: 0.8;
  }
  
  .error-icon svg {
    width: 100%;
    height: 100%;
  }
  
  .error-code {
    font-size: 7rem;
    font-weight: 800;
    color: #f59e0b;
    line-height: 1;
    margin: 0;
    text-shadow: 0 4px 20px rgba(245, 158, 11, 0.2);
  }
  
  .error-title {
    font-size: 2rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0.5rem 0 1rem;
  }
  
  .error-message {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.7;
    margin-bottom: 2rem;
  }
  
  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.85rem 1.75rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
    border: none;
    font-family: inherit;
  }
  
  .btn-primary {
    background: #f59e0b;
    color: white;
  }
  
  .btn-primary:hover {
    background: #d97706;
    transform: translateY(-2px);
  }
  
  .btn-secondary {
    background: white;
    color: #333;
    border: 2px solid #e0e0e0;
  }
  
  .btn-secondary:hover {
    border-color: #f59e0b;
    color: #f59e0b;
    text-decoration: none;
  }
  
  .error-info {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    text-align: left;
  }
  
  .info-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid #e5e5e5;
  }
  
  .info-card h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    margin: 0 0 0.75rem;
  }
  
  .info-card p,
  .info-card li {
    font-size: 0.9rem;
    color: #666;
    margin: 0;
    line-height: 1.6;
  }
  
  .info-card ul {
    margin: 0;
    padding-left: 1.25rem;
  }
  
  .info-card li {
    margin-bottom: 0.25rem;
  }
  
  .info-card a {
    color: #f59e0b;
  }
  
  @media (max-width: 640px) {
    .error-code {
      font-size: 4.5rem;
    }
    
    .error-title {
      font-size: 1.5rem;
    }
    
    .error-info {
      grid-template-columns: 1fr;
    }
    
    .error-actions {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
